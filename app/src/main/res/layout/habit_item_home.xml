<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="81dp"
    android:orientation="horizontal"
    android:padding="16dp"
    android:elevation="15dp"
    android:gravity="center_vertical"
    android:background="@drawable/habit_item"
    android:layout_margin="15dp">

    <ImageView
        android:id="@+id/iconImageViewHome"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        app:srcCompat="@drawable/default_icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/habitTextViewHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/basic_yellow"
            android:textStyle="normal"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/frequencyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frequency: Daily"
            android:textColor="@color/basic_yellow"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/completionTargetTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target: 3/day"
            android:textColor="@color/basic_yellow"
            android:textSize="14sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/habitCheckBox"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/unchecked_box" />
</LinearLayout>
