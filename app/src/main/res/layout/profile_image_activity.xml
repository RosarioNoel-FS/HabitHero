<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:padding="16dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select a profile image"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:textColor="@color/dark_yellow"
            android:layout_marginBottom="16dp"/>

    <!-- Row 1 with profile_light_man and profile_light_woman -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_profile_light_man"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/profile_light_man"
            android:scaleType="centerCrop"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/image_profile_light_woman"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/profile_light_woman"
            android:scaleType="centerCrop"
            android:layout_margin="8dp"/>
    </LinearLayout>

    <!-- Row 2 with profile_dark_man and profile_dark_woman -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_profile_dark_man"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/profile_dark_man"
            android:scaleType="centerCrop"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/image_profile_dark_woman"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/profile_dark_woman"
            android:scaleType="centerCrop"
            android:layout_margin="8dp"/>
    </LinearLayout>

    <!-- Row 3 with profile_light_boy and profile_light_girl -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_profile_light_boy"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/profile_light_boy"
            android:scaleType="centerCrop"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/image_profile_light_girl"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/profile_light_girl"
            android:scaleType="centerCrop"
            android:layout_margin="8dp"/>
    </LinearLayout>

    <!-- Row 4 with profile_dark_boy and profile_dark_girl -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_profile_dark_boy"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/profile_dark_boy"
            android:scaleType="centerCrop"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/image_profile_dark_girl"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/profile_dark_girl"
            android:scaleType="centerCrop"
            android:layout_margin="8dp"/>
    </LinearLayout>

    <!-- Buttons for taking picture, selecting from gallery, and confirmation -->
    <Button
        android:id="@+id/btn_take_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take a Picture"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_select_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select from Gallery"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_marginTop="16dp"/>
</LinearLayout>
</LinearLayout>