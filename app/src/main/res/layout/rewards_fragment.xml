<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#112732">

    <TextView
        android:id="@+id/rewardsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rewards"
        android:textColor="@color/button_default_color"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Badge Grid (Placeholder) -->
    <GridLayout
        android:id="@+id/badgeGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:rowCount="3"
        android:columnCount="3"
        app:layout_constraintTop_toBottomOf="@id/rewardsTitle"
        app:layout_constraintBottom_toTopOf="@id/navigationBar">

        <!-- You can add ImageViews or other views here for each badge -->

    </GridLayout>

    <!-- Bottom Navigation (Placeholder) -->
    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent">


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
