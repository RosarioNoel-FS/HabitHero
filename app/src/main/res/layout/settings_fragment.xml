<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">


    <TextView
        android:id="@+id/greeting_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Hello"
        android:textColor="@color/dark_yellow"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/profile_preview_image"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_dark"

        android:text="Sign Out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_img_button"
        app:layout_constraintVertical_bias="0.87" />

    <Button
        android:id="@+id/edit_profile_img_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button_light"
        android:text="Edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_preview_image" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="18dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_profile_img_button"
        app:layout_constraintEnd_toEndOf="@+id/edit_profile_img_button"
        app:layout_constraintTop_toTopOf="@+id/edit_profile_img_button"
        app:srcCompat="@drawable/pencil" />

    <TextView
        android:id="@+id/username_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="update username"
        android:textColor="@color/basic_yellow"
        android:textStyle="bold"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_img_button" />

    <EditText
        android:id="@+id/username_input"
        android:layout_width="0dp"
        android:background="@drawable/rounded_edittext"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:hint="Enter new username"
        android:paddingLeft="16dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_label"
        app:layout_constraintWidth_percent="0.8" />

    <Button
        android:id="@+id/update_username_button"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button_light"
        android:text="Confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_input" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="update profile picture"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/basic_yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greeting_text_view" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="18dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/update_username_button"
        app:layout_constraintEnd_toEndOf="@+id/update_username_button"
        app:layout_constraintTop_toTopOf="@+id/update_username_button"
        app:srcCompat="@drawable/pencil" />

    



</androidx.constraintlayout.widget.ConstraintLayout>